{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "http://github.com/SAP/abap-file-formats/file-formats/chko/chko.json",
	"type": "object",
	"properties": {
		"header": {
			"type": "object",
			"title": "Header",
			"properties": {
				"$schema": {
					"type": "string",
					"title": "Schema",
					"description": "Format version"
				},
				"description": {
					"type": "string",
					"title": "Description",
					"description": "Description of an ATC Check Object"
				},
				"masterLanguage": {
					"type": "string",
					"minLength": 2,
					"maxLength": 2,
					"title": "Master Language",
					"description": "Master language of the development object\nAll translatable text shall be maintained in this language"
				},
				"abapLanguageVersion": {
					"type": "string",
					"enum": [
						"standard",
						"standardUnicode",
						"keyUser",
						"cloudDevelopment"
					],
					"enumDescriptions": [
						"Standard",
						"Standard unicode",
						"ABAP for key user tools",
						"ABAP for Cloud Development"
					],
					"title": "Abap Language Version",
					"description": "ABAP language version"
				}
			},
			"additionalProperties": false,
			"required": [
				"$schema",
				"description",
				"masterLanguage",
				"abapLanguageVersion"
			]
		},
		"content": {
			"type": "object",
			"title": "content",
			"description": "content",
			"properties": {
				"category": {
					"type": "string",
					"title": "category",
					"description": "category"
				},
				"implementingClass": {
					"type": "string",
					"title": "implementingClass",
					"description": "implementingClass"
				},
				"remoteEnabled": {
					"type": "boolean",
					"title": "remoteEnabled",
					"description": "General Flag"
				},
				"parameters": {
					"type": "array",
					"title": "parameters",
					"description": "parameters",
					"items": {
						"type": "object",
						"title": "tyParameter",
						"description": "tyParameter",
						"properties": {
							"technicalId": {
								"type": "string",
								"title": "technicalId",
								"description": "technicalId"
							},
							"name": {
								"type": "string",
								"title": "name",
								"description": "Name of a parameter"
							},
							"description": {
								"type": "string",
								"title": "description",
								"description": "Description of a parameter"
							},
							"modifiable": {
								"type": "boolean",
								"title": "modifiable",
								"description": "The parameter is modifiable"
							}
						}
					}
				}
			}
		}
	}
}                                                                                                                                     
